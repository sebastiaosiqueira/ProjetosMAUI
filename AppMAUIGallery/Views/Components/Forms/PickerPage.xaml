<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Components.Forms.PickerPage"
             Title="PickerPage">
    <VerticalStackLayout Padding="10">
        <Picker Title="Marcas de carro" SelectedIndexChanged="Picker_SelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>FIAT</x:String>
                    <x:String>RENAULT</x:String>

                    <x:String>PEGEOUT</x:String>

                    <x:String>FORD</x:String>
                
                </x:Array>
            </Picker.ItemsSource>
            
        </Picker>
        <Label x:Name="lblvalue"/>
        <Label x:Name="lblindex"/>
    </VerticalStackLayout>
</ContentPage>