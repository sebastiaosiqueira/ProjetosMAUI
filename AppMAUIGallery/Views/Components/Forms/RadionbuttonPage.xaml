<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Components.Forms.RadionbuttonPage"
             Title="RadionbuttonPage">
    <VerticalStackLayout Padding="10">
        <StackLayout>
            <Label 
      Text="Qual linguagem de programação voce mais gosta"
      VerticalOptions="Center" 
      HorizontalOptions="Center" />
            <RadioButton Content="C#" CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Content="Java#" CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Content="Start#" CheckedChanged="RadioButton_CheckedChanged"/>
            <Label x:Name="LblResultAsk01"/>
        </StackLayout>
        <StackLayout RadioButtonGroup.GroupName="ask02">
            <Label 
                Text="Qual linguagem de programação você mais gosta?"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <RadioButton IsChecked="True" Content="C#" />
            <RadioButton Content="Java"/>
            <RadioButton Content="JavaScript"/>
        </StackLayout>


        <StackLayout RadioButtonGroup.GroupName="ask02">
            <Label 
                Text="Qual é o mascote do NET MAUI?"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <RadioButton Value="Robot">
                <RadioButton.Content>
                    <HorizontalStackLayout>
                        <Label Text="Robot" />
                        <Image Source="dotnet_bot.png" HeightRequest="30" />
                    </HorizontalStackLayout>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Content="Java" />
            <RadioButton Content="JavaScript"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>