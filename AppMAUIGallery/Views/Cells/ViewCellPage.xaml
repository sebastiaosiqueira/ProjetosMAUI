<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Cells.ViewCellPage"
             Title="ViewCellPage">
    <VerticalStackLayout Padding="10">
        <TableView>
            <TableSection Title="Colaborador">
                <ViewCell>
                    <Grid ColumnDefinitions="70, *,70">
                        <Image Source="dotnet_bot.png" Margin="10,0,0,0"/>
                        <VerticalStackLayout Grid.Column="1">

                        <Label Text="Jose Rodrigues Freitas" FontSize="30" Margin="10,0,0,0" />
                            <Label Text="Presidente (CEO)" Margin="10,0,0,0" TextColor="Gray"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Text="Excluir"/>
                    </Grid>
                </ViewCell>
            </TableSection>
        </TableView>
    </VerticalStackLayout>
</ContentPage>